@model WSysComasurClound.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="Saul Henriquez" name="author" />

    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/font-awensome")
    @Styles.Render("~/Content/simple-icons")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/uniform")
    @Styles.Render("~/Content/bootstrap-switch")

    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/template/css/components.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/Content/template/css/plugins.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/login-3.css" rel="stylesheet"    type="text/css"  />
    <link href="~/Content/plugins/bootstrap/css/bootstrap.css"  rel="stylesheet" type="text/css" />
    <link href="~/Content/efects/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="favicon.ico" />
</head>

<body class="login">
    <div class="logo">
        <a href="/">
            <img src="~/Content/template/layout/img/logocoma.png" alt="" />
        </a>
    </div>
    <div class="wrapper">

        <div class="content">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-title" })
                <h3 class="form-title" style="text-align:center; text-emphasis:triangle;">&lt;WSysComasur&gt;<br/> Ingresa con tu Credencial</h3>
                <div class="alert alert-danger display-hide">
                    <button class="close" data-close="alert"></button>
                    <span> Enter any username and password. </span>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", placeholder = "Usuario" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger text-title" })
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control  placeholder-no-fix", placeholder = "Password" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger text-title" })
                </div>
                <div class="form-actions">
                    <label class="checkbox">
                        <div class="checker" id="uniform-RememberMe"><span class=""><input data-val="true" data-val-required="El campo Recordar? es obligatorio." id="RememberMe" name="RememberMe" type="checkbox" value="true"></span></div><input name="RememberMe" type="hidden" value="false">
                        Recordar clave &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;
                    </label>

                    <center><button type="submit" class="btn red ">Acceso</button></center>
                </div>

               <div class="login-options">
                        @*@Html.Partial("_ExternalLoginsListPartial", new Tracking.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl }) *@
                        <h4>Accesa con tus cuentas privadas</h4>
                            <ul class="social-icons">
                                <li>
                                    <a class="facebook" data-original-title="facebook" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="twitter" data-original-title="Twitter" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="googleplus" data-original-title="Goole Plus" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="linkedin" data-original-title="Linkedin" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="skype" data-original-title="Linkedin" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="picasa" data-original-title="Linkedin" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="spotify" data-original-title="Linkedin" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="stumbleupon" data-original-title="Linkedin" href="javascript:;"> </a>
                                </li>
                                <li>
                                    <a class="tumblr" data-original-title="Linkedin" href="javascript:;"> </a>
                                </li>
                            </ul>

                 </div>

                    <center>
                        <div class="forget-password">
                            <h4>Olvidaste tu Contraseña?</h4>
                            <p>
                                Has Click
                                <a href="/Account/Reset" id="forget-password">Aquì </a> Cambia tu Password.
                            </p>
                        </div>
                    </center>

            }
        </div>
        <ul class="bg-bubbles">
            <li>*</li>
            <li>_</li>
            <li>-</li>
            <li>+</li>
            <li>*</li>
            <li>-</li>
            <li>-</li>
            <li>*</li>
            <li>_</li>
            <li>-</li>
            <li>*</li>
            <li>_</li>
            <li>-</li>
            <li>_</li>
            <li>-</li>
            <li>-</li>
            <li>*</li>
            <li>_</li>
            <li>-</li>
            <li>*</li>
            <li>_</li>
        </ul>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="/Content/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
        @Scripts.Render("~/bundles/jquery-plugins")
        <script src="/Content/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
        <script src="/Content/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
        <script src="/Content/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>

        <script src="/Content/template/scripts/app.js" type="text/javascript"></script>
        <script src="~/Content/efects/js/index.js" type="text/javascript"></script>

        <!-- END THEME GLOBAL SCRIPTS -->
        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        <script src="/Content/js/login.js" type="text/javascript"></script>
    </body>
</html>