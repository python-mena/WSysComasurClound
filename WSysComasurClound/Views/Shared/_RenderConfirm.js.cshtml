<script type="text/javascript">
    var deleteURL;
    var currentElementId;
    function updateDialog(id, action) {
        $("#notificationFormItemId").val(id);
        switch (action) {
            case 'detail':
                alert("Show details in this section");
               break;
            
            case 'delete':
                var del = deleteURL + "/" + id;
                debugger;
                $("#notificationForm").attr('action', del).submit();
                break;
            
            default:
                console.debug('Unknown action' +action)

        }
    }
    function confirmDelete(deleteUrl, id) {

        currentElementId = id;
        deleteURL = deleteUrl;
        $("#deleteConfirmModal").modal({ keyboard: true }, 'show');
    }
    $(function () {
        $("#deleteConfirmModal").on('click', "#deleteConfirm", function () {
            updateDialog(currentElementId, 'delete');
        });
        $("#deleteConfirmModal").on('click', "#deleteCancel", function () {
            $("#deleteConfirmModal").modal('hide');
        });
    });

</script>
